39780 IF F8 OR F9 THEN 39890
39790 S$="@"&N$
39800 CALL "file",F1,S$,T$
39810 P$="WATTRIBUTE LFN:1 HATTRIBUTE: ""{4050  }  """
39820 S$=SEG(T$,6,1)
39850 T$=SEG(E$,7,1)
39860 T$=SEG("DNP",(T$="D")+2*(T$="N")+2*(S$="H"),1)
39870 P$=REP(T$,40,1)
39872 S$=SEG("ABB",POS("ABH",S$,1),1)
39874 P$=REP(S$,39,1)
