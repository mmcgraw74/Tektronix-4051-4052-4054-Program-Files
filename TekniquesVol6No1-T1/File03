38000 REM*R Build_File_List(P$,P0::)
38005 S8=P0
38010 CLOSE 2
38015 N9=N4
38020 OPEN P$,"G";2,"R",T$
38030 IF T$="" THEN 38242
38032 N$=SEG(T$,189,59)
38034 N$=SEG(N$,1,LEN(N$)-1)
38036 IF POS(N$,"C49074909/",1)=1 THEN 38230
38038 IF C2<>2 THEN 38049
38040 S$="@"&N$
38041 CALL "file",F1,S$,T$
38042 S$=SEG(T$,6,1)
38043 IF POS("HAB",S$,1)+2*(POS(T$,"  0",151)<>151)<3 THEN 38049
38044 GO TO 38220
38049 IF NOT(S8) THEN 38110
38050 P9=1
38060 IF NOT(P9) THEN 38110
38070 PRINT "Process file @";N$;"?   (Yes or No; default No): ";
38080 P0=0
38090 GOSUB 8000
38100 GO TO 38060
38110 IF S8 AND (NOT(S8) OR P1=0) THEN 38220
38120 IF C2=2 THEN 38160
38130 P$=N$
38140 GOSUB 39000
38150 GO TO 38180
38160 Q$=" "
38170 P9=0
38180 IF P9 THEN 38220
38190 N4=N4+1
38200 PRINT #3:"@";N$
38210 PRINT #3:Q$
38220 SET KEY 
38230 CALL "next",2,T$
38240 GO TO 38030
38242 IF N4>N9 OR S8 OR (C2<>2 AND P9) THEN 38250
38244 PRINT "
Warning: No acceptable matches were found ";
38246 PRINT "for this file name.
"
38250 CLOSE 2
38260 RETURN 
39000 REM*R Create_4909_Dummy_File(P$::Q$,P9)
39010 N$=P$
39020 D$=N$
39030 S$="@"&N$
39040 CALL "file",F1,S$,T$
39050 T$=SEG(T$,145,9)
39060 IF VAL(T$)>0 THEN 39090
39070 E$="TYPE: DIRECT"
39080 GO TO 39100
39090 E$="TYPE: NINDEX"
39100 F8=1
39110 F9=0
39120 IF NOT(F8) OR F9 THEN 39780
39130 P$="CLOSE LFN:1"
39140 GOSUB 500
39150 SET NOKEY 
