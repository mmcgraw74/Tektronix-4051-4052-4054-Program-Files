41350 GO TO 41280
41360 RETURN 
42000 REM*R Calculate_Processing_Time(::)
42010 GO TO C2 OF 42020,42050,42080
42020 S$="transfer"
42030 K7=N4*1.3+1
42040 GO TO 42100
42050 S$="list"
42060 K7=N4*2+2
42070 GO TO 42100
42080 S$="transfer, list, and conversion"
42090 K7=N4*3+2
42100 PRINT "Beginning the ";S$;" operations.
"
42110 K7=INT(K7+2.5*K7*(RND(0)<0.5)+0.5)
42112 S$=" file"
42114 IF N4=1 THEN 42120
42116 S$=" files"
42120 PRINT "The ";N4;S$;" selected should be processed in ";
42125 PRINT "approximately ";K7;" minutes."
42130 RETURN 

