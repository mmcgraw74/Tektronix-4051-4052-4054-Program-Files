90 REM TEKNIQUES V6N4 4050A-SERIES "HATCH" EXAMPLE100 INIT 110 SET DEGREES 120 PAGE 130 DIM Xarray(100),Yarray(100)140 MOVE 0,95150 PRINT "USE THE JOYSTICK TO LOCATE THE VERTICES OF A ";160 PRINT "POLYGON. PRESS `F' TO"170 PRINT "INDICATE THAT YOU ARE FINISHED. THE POLYGON ";180 PRINT "MUST BE NON-INTERSECTING"190 PRINT "OR ELSE MUST FOLLOW THE RULES IN THE ";200 PRINT "DOCUMENTATION."210 GIN Xpt,Ypt220 VIEWPORT 0,130,20,80230 WINDOW 0,13,0,6240 FOR I=0 TO 13250 AXIS 0,0,I,I260 NEXT I270 N=0280 REM - OBTAIN VERTICES OF POLYGON290 DO 300 N=N+1310 POINTER Xarray(N),Yarray(N),Z$320 EXIT IF Z$="F" OR Z$="f"330 LOOP 340 REM - DISPLAY AND CROSSHATCH POLYGON350 DIM Xarray(N),Yarray(N)360 MOVE Xarray(N),Yarray(N)370 DRAW Xarray,Yarray380 FOR I=0 TO 90 STEP 90390 HATCH ROTATE 45+I400 HATCH SPACE 4410 HATCH Xarray,Yarray420 NEXT I430 VIEWPORT 0,130,0,100440 WINDOW 0,130,0,100450 MOVE 0,Ypt460 PRINT "ENTER ONE MORE POINT."470 VIEWPORT 0,130,20,80480 WINDOW 0,13,0,6490 REM OBTAIN POINT TO COMPARE TO POLYGON500 POINTER Xpt,Ypt,Z$510 MOVE Xpt,Ypt520 PRINT "X"530 VIEWPORT 0,130,0,100540 WINDOW 0,130,0,100550 MOVE 0,15560 REM - PRINT DATA ABOUT POLYGON570 PRINT "THE PERIMETER IS ";DISTANCE(Xarray,Yarray)580 PRINT "THE AREA IS ";AREA(Xarray,Yarray)590 CENTROID Xarray,Yarray,Xcenter,Ycenter600 PRINT "THE CENTROID IS ";Xcenter;", ";Ycenter610 Place=INSIDE(Xarray,Yarray,Xpt,Ypt)620 A$="OUTSIDEONINSIDE"630 P=1*(Place=0)+8*(Place=1)+10*(Place=2)640 A$=SEG(A$,P,5*(Place=0)+4*(Place=2)+2)650 PRINT "THE POINT IS ";A$;" THE POLYGON"660 END 