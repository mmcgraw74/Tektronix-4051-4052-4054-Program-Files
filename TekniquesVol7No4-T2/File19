964 GO TO 1000
970 PRINT @1:"";
980 PRINT "POSITION PEN AT END OF LINE"
990 INPUT @1,27:X4,Y4
1000 PRINT @1:"";
1010 MOVE @1:X3,Y3
1020 DRAW @1:X4,Y4
1021 GOSUB 1290
1030 GO TO 170
1040 PRINT "
POSITION PEN AT TOP OF DIAMOND"
1050 INPUT @1,27:X3,Y3
1051 IF M=0 THEN 1060
1052 GOSUB 1260
1054 GO TO 1090
1060 PRINT @1:"";
1070 PRINT "POSITION PEN AT RIGHT CORNER OF DIAMOND"
1080 INPUT @1,27:X4,Y4
1090 PRINT @1:"";
1100 MOVE @1:X3,Y3
1110 DRAW @1:X4,Y4
1120 DRAW @1:X3,Y4-(Y3-Y4)
1130 DRAW @1:X3+(X3-X4),Y4
1140 DRAW @1:X3,Y3
1141 GOSUB 1290
1150 GO TO 170
1160 REM DISPLAY PRESENT VALUES
1170 PRINT "        PRESENT VALUES......


"
