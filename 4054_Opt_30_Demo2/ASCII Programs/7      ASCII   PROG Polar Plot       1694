5000 REM FILE 7 POLAR PLOT5010 RINIT 5020 SET KEY 5030 PAGE 5040 DELETE X,Y,X1,Y15050 H=1.5365060 W=0.925070 CHARSIZE 15080 SET DEGREES 5090 BRIGHTNESS 15100 MOVE 65,505110 SCALE 1.2,1.25120 FOR I=0 TO 3605130 R1=15140 IF I/30=INT(I/30) THEN 52405150 R1=35160 BRIGHTNESS 25170 IF I/10=INT(I/10) THEN 52405180 BRIGHTNESS 15190 R1=55200 IF I/5=INT(I/5) THEN 52405210 R1=105220 IF I/2=INT(I/2) THEN 52405230 R1=205240 MOVE SIN(I)*50,COS(I)*505250 IF R1<>5 THEN 52805260 DRAW SIN(I)*20,COS(I)*205270 MOVE SIN(I)*10,COS(I)*105280 DRAW SIN(I)*R1,COS(I)*R15290 IF I/10<>INT(I/10) THEN 53205300 MOVE SIN(I)*20,COS(I)*205310 DRAW SIN(I)*52,COS(I)*525320 NEXT I5330 DIM X(90),Y(90),X1(90),Y1(90)5340 FOR I=1 TO 905350 X1(I)=SIN(I*4)5360 Y1(I)=COS(I*4)5370 NEXT I5380 FOR I=5 TO 50 STEP 55390 BRIGHTNESS 15400 X=I*X15410 Y=I*Y15420 MOVE X(90),Y(90)5430 DRAW X,Y5440 NEXT I5450 FOR I=0 TO 350 STEP 105460 MOVE 0,05470 ROTATE -I+905480 RMOVE 55,05490 INPUT @32,24:A,B5500 I$=STR(I)5510 I$=REP("",1,1)5520 PRINT @32,21:A-LEN(I$)/2*W,B-0.5*H5530 PRINT I$;5540 INPUT @32,24:A,B5550 PRINT @32,21:A,B+0.5*H5560 PRINT "o";5570 NEXT I5580 REM data display5590 BRIGHTNESS 25600 SET RADIANS 5610 B=-PI5620 E=PI5630 I=PI/905640 L=205650 D=155660 E1=405670 A=4.95680 DELETE X,Y5690 J=B5700 FOR V=1 TO 15710 GOSUB 58405720 MOVE SIN(K)*R1,COS(K)*R15730 FOR J=B TO E STEP I5740 GOSUB 58405750 DRAW SIN(K)*R1,COS(K)*R15760 NEXT J5770 NEXT V5780 BRIGHTNESS 35790 U7=35800 U8=35810 DELETE X,Y,X1,Y15820 ROTATE 05830 GO TO 905840 REM5850 R1=COS(J)*L-SIN(J*2)*D+105860 K=J-PI/R15870 RETURN 64554 CALL "BSAVE"64560 OLD "DISCTOTAPE.CONT"