5000 REM FILE 24 INTRODUCTION TO INTERACTIVE TOOL DESIGN5010 VIEWPORT 0,130,0,1005020 WINDOW 0,130,0,1005030 DELETE A,A$,B$5040 RINIT 5050 PAGE 5060 ROPEN 10005070 MOVE 50,495080 CHARSIZE 45090 PRINT "DYNAMIC GRAPHICS";5100 RCLOSE 5110 FOR I=1 TO 255120 MOVE 65,505130 ROPEN I5140 VISIBILITY I,05150 RMOVE -12,95160 RDRAW 24,05170 RDRAW 0,-185180 RDRAW -24,05190 RDRAW 0,185200 RDRAW 2,-25210 RDRAW 20,05220 RDRAW 2,25230 RMOVE -2,-25240 RDRAW 0,-145250 RMOVE 2,-25260 RDRAW -2,25270 RDRAW -20,05280 RDRAW -2,-25290 RMOVE 2,25300 RDRAW 0,145310 RCLOSE 5320 NEXT I5330 DIM A(25,2)5340 N=15350 FOR X=13 TO 125 STEP 265360 FOR Y=10 TO 95 STEP 205370 A(N,1)=X5380 A(N,2)=Y5390 N=N+15400 NEXT Y5410 NEXT X5420 DIM A$(25),B$(25)5430 A$=""5440 FOR I=1 TO 255450 C$=CHR(I+20)5460 A$=A$&C$5470 NEXT I5480 B$=""5490 FOR I=1 TO 255500 C=INT(RND(-1)*LEN(A$))+15510 C$=SEG(A$,C,1)5520 A$=REP("",C,1)5530 C=ASC(C$)-205540 IF A(C,1)<110 AND A(C,1)>20 AND A(C,2)<80 AND A(C,2)>20 THEN 55805550 B$=B$&C$5560 STPOINT C,A(C,1),A(C,2)5570 VISIBILITY C,15580 NEXT I5590 A$=B$5600 K=135610 FOR I=1 TO LEN(B$)5620 C=INT(RND(-1)*LEN(B$))+15630 C$=SEG(B$,C,1)5640 B$=REP("",C,1)5650 C=ASC(C$)-205660 VISIBILITY K,15670 X=A(C,1)-A(K,1)5680 Y=A(C,2)-A(K,2)5690 Y1=SQR(Y*Y+X*X)5700 Y1=INT(Y1*2)5710 N1=Y15720 X1=X/Y15730 Y1=Y/Y15740 X=A(K,1)5750 Y=A(K,2)5760 FOR J=1 TO N15770 STPOINT K,X,Y5780 X=X+X15790 Y=Y+Y15800 NEXT J5810 VISIBILITY C,05820 VISIBILITY K,05830 K=C5840 NEXT I5850 B$=A$5860 FOR I=1 TO LEN(B$)5870 C=INT(RND(-1)*LEN(B$))+15880 C$=SEG(B$,C,1)5890 B$=REP("",C,1)5900 C=ASC(C$)-205910 STPOINT C,A(C,1),A(C,2)5920 FIX C5930 NEXT I5940 RDELETE 10005950 DELETE A,A4,B$5960 RINIT 5970 FIND 255980 CALL "BOLD"64554 CALL "BSAVE"64560 OLD "DISCTOTAPE.CONT"