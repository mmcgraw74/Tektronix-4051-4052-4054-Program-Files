5000 REM FILE 23 R.V. SIMULATION5010 RINIT 5020 VIEWPORT 0,130,0,1005030 WINDOW 0,130,0,1005040 DELETE X,Y5050 PAGE 5060 SET DEGREES 5070 P=0.235080 FOR J=1 TO 25090 MOVE 65,505100 ROPEN J5110 ROTATE 05120 RMOVE 0.5*P,3.5*P5130 VISIBILITY J,05140 FOR I=15 TO 360 STEP 155150 ROTATE I5160 RDRAW P,05170 NEXT I5180 RCLOSE 5190 NEXT J5200 ROTATE 05210 N=2505220 DIM X(N),Y(N)5230 Y1=505240 R=RND(-1)5250 R=25260 FOR I=1 TO N5270 X(I)=I5280 Y1=Y1+RND(1)*R-R/25290 Y(I)=Y15300 NEXT I5310 WINDOW 4,N,0,1005320 FOR J=1 TO 15330 Y=Y-35340 FOR I=4 TO N5350 Y(I)=(Y(I-3)+Y(I-2)+Y(I-1)+Y(I))/45360 NEXT I5370 NEXT J5380 GOSUB 54005390 GO TO 54505400 REM5410 WINDOW 4,N,0,1005420 MOVE 0,05430 DRAW X,Y5440 RETURN 5450 REM5460 VISIBILITY 1,15470 VISIBILITY 2,15480 C=05490 V5=35500 FOR I=4 TO N-105510 WINDOW 4,N,0,1005520 STPOINT 1,X(I),Y(I)-P*V55530 STPOINT 2,X(I+10),Y(I+10)-P*V55540 K=5+C5550 L=5+NOT(C)5560 C=NOT(C)5570 ROPEN K5580 VISIBILITY K,05590 MOVE X(I+10),Y(I+10)+P*V55600 INPUT @32,24:V0,V15610 MOVE X(I),Y(I)+P*V55620 INPUT @32,24:V2,V35630 R1=SQR((V0-V2)^2+(V1-V3)^2)5640 R=ASN((V1-V3)/R1)5650 MOVE X(I+5),(Y(I+10)-Y(I))/2+Y(I)5660 SCALE 1.9,1.95670 ROTATE R5680 BRIGHTNESS 05690 RMOVE 9,45700 RDRAW -4.5,05710 RDRAW -2,-25720 RDRAW -2.5,05730 RDRAW -2,25740 RDRAW -5,05750 RMOVE 1,05760 RDRAW 0,25770 RDRAW 5,05780 RDRAW 1,-25790 RDRAW 3.5,05800 RDRAW 0,15810 RDRAW -1,15820 RDRAW 0.5,0.55830 RDRAW 0,0.55840 RDRAW -0.5,0.55850 RDRAW -0.5,05860 RDRAW -0.5,-0.55870 RDRAW 0,-15880 RDRAW -0.5,-25890 RMOVE 2.5,05900 RDRAW 0.5,0.55910 RDRAW 0,3.55920 RMOVE -1,-35930 RDRAW 1,15940 RDRAW 4,05950 RDRAW 0,-25960 RCLOSE 5970 VISIBILITY K,15980 VISIBILITY L,05990 NEXT I6000 DELETE X,Y6010 RINIT 6020 GO TO 9064554 CALL "BSAVE"64560 OLD "DISCTOTAPE.CONT"