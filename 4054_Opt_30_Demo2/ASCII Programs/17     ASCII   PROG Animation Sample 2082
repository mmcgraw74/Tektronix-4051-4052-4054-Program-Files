5000 REM FILE 17 ANIMATION SAMPLE5010 PAGE 5020 PRINT @32,21:44,175030 CHARSIZE 45040 RINIT 5050 PRINT "ANIMATION SAMPLE"5060 CHARSIZE 15070 T=325080 SET DEGREES 5090 FOR I=0 TO 905100 X=SIN(I)*655110 Y=COS(I)*655120 PRINT @32,21:0,Y+355130 PRINT @32,20:65-X,Y+355140 PRINT @32,21:65+X,Y+355150 PRINT @32,20:130,Y+355160 NEXT I5170 L1=4.55180 L2=45190 H1=515200 H2=605210 R3=1.55220 N=15230 FOR I=0 TO 360 STEP 105240 ROTATE 05250 MOVE H2+1,H1-(L1+L2+R3)*0.745260 ROPEN N5270 VISIBILITY N,05280 RMOVE COS(I)*(R3*2),SIN(I)*R3 MAX 05290 GIN X1,Y15300 X=H2-X15310 Y=H1-Y15320 R=SQR(X^2+Y^2)5330 GOSUB 58805340 Z=A5350 S1=R*L1/(L1+L2)5360 S2=R*L2/(L1+L2)5370 A=90-ASN(S2/L2)5380 ROTATE A+Z5390 RDRAW L2,05400 A=90-ASN(S1/L1)5410 ROTATE Z-A5420 RDRAW L1*0.9,05430 RCLOSE 5440 ROPEN N+3005450 VISIBILITY N+300,05460 ROTATE Z5470 RDRAW L1*-0.8,05480 ROTATE Z+A5490 RDRAW 0,L2*0.85500 RCLOSE 5510 N=N+15520 NEXT I5530 C=05540 N=N-15550 PRINT @32,21:0,205560 PRINT @32,20:130,205570 X=1205580 Y=205590 A=15600 B=INT(N/2)5610 A1=N5620 B1=B-15630 STPOINT A,X,Y5640 STPOINT B,X,Y5650 VISIBILITY A,15660 VISIBILITY B,15670 VISIBILITY A1,05680 VISIBILITY B1,05690 STPOINT A+300,X-2,Y+145700 STPOINT B+300,X-2,Y+145710 VISIBILITY A+300,15720 VISIBILITY B+300,15730 VISIBILITY A1+300,05740 VISIBILITY B1+300,05750 A=A*(A<N)+15760 B=B*(B<N)+15770 A1=A1*(A1<N)+15780 B1=B1*(B1<N)+15790 X=X-0.455800 C=C+15810 IF C>700 THEN 58405820 IF X<5 THEN 55705830 GO TO 56305840 RINIT 5850 U8=9995860 U7=9995870 GO TO 905880 REM --------------------------------------------------5890 REM   DIRECTION SUBROUTINE5900 REM   INPUT  X=DELTA X5910 REM          Y=DELTA Y5920 REM   OUTPUT A=ANGLE5930 REM   INTERNAL A0,A1,A25940 REM --------------------------------------------------5950 A0=SQR(X^2+Y^2)5960 A=ASN(Y/A0)5970 A0=SGN(Y)=-15980 A1=SGN(X)=-15990 A2=NOT(A1)6000 A1=A2*(A0=1)+A1*(A0<>1)6010 A=(A0<>A1)*(180-A)+(A0 AND A1)*(360+A)+NOT(A0 OR A1)*A6020 RETURN 64554 CALL "BSAVE"64560 OLD "DISCTOTAPE.CONT"