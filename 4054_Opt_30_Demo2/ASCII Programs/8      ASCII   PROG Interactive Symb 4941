5000 REM  FILE 8 INTERACTIVE SYMBOLS5010 ROTATE 05020 PAGE 5030 SET DEGREES 5040 REMARK INITIAL VALUES FOR:OUTPUT DEVICE,ROTATION,ARROW SW.,5050 REMARK                    NUMBER OF SYMBOLS,HEIGHT & WIDTH5060 DATA 32,0,0,7,9,125070 READ T,A,K,N,H,W5080 H1=H/25090 W1=W/25100 BRIGHTNESS 35110 PRINT @32,21:25,55120 CHARSIZE 45130 PRINT "O B J E C T   P O S I T I O N I N G";5140 HOME 5150 REMARK BUILD  REFRESH MENU AND SYMBOLS5160 ROPEN 10005170 CHARSIZE 35180 PRINT """S"" TO STOP"5190 PRINT """R"" TO ROTATE SYMBOL RIGHT"5200 PRINT """L"" TO ROTATE SYMBOL LEFT"5210 PRINT """T"" TO ENTER TEXT"5220 REMARK DRAW SYMBOL MENU FRAME5230 FOR I=0 TO N5240 H2=100/N5250 W2=130-8-W5260 PRINT @T,21:W2,100-H2*I5270 PRINT @T,20:130,100-H2*I5280 NEXT I5290 PRINT @T,21:130,1005300 PRINT @T,20:130,100-H2*(I-1)5310 PRINT @T,21:W2,100-H2*(I-1)5320 PRINT @T,20:W2,1005330 REMARK DRAW SYMBOLS IN FRAME5340 FOR I=1 TO N5350 MOVE @T:130-4-W1,100-H2*I+H1+15360 GIN @T:X,Y5370 GOSUB 63305380 MOVE @T:X-(W1+8),Y-15390 PRINT @T:I;5400 NEXT I5410 RCLOSE 5420 CHARSIZE 15430 K=15440 REMARK FOLLOWING IS POINTER COMMAND FOR CROSSHAIR INTERACTION5450 POINTER X5,Y5,Z$5460 IF Z$="S" THEN 63005470 IF Z$="L" THEN 57705480 IF Z$="R" THEN 58005490 IF Z$="T" THEN 58305500 REMARK IF X LOCATION IS IN MENU AREA--SELECT NEW MENU ITEM5510 IF X5=>W2 THEN 61805520 REMARK FIX IMAGE IF SYMBOL # LESS THAN 5 OR5530 REMARK           IF ODD NUMBERED SEQUENCE5540 IF K1 OR I<6 THEN 61205550 IF I=7 THEN 56205560 REMARK APPEND PREVIOUS POINT TO EXISTING SYMBOL5570 RAPPEND 15580 REMARK DRAW FROM PREVIOUS POINT==RUBBERBANDING==5590 DRAW X5,Y55600 RCLOSE 5610 GO TO 61405620 REMARK REPLACE CROSSHAIR WITH RUBBERBAND DRAW5630 ROPEN 15640 GO TO 55805650 REMARK BUILD CROSSHAIR FOR MOVE/DRAW SYMBOL5660 MOVE 65,505670 ROPEN 25680 VISIBILITY 2,05690 RMOVE -20,05700 RDRAW 40,05710 RMOVE -20,205720 RDRAW 0,-405730 RMOVE 0,205740 RCLOSE 5750 RREPLACE 1,25760 RETURN 5770 REMARK INCREMENT ANGLE OF ROTATION BY 15 DEGREES5780 A=A+155790 GO TO 61905800 REMARK DECREMENT ANGLE OF ROTATION BY 15 DEGREES5810 A=A-155820 GO TO 61905830 REM TEXT ENTRY PROCESSING5840 I=15850 A$="_"5860 ROPEN 15870 PRINT @32,21:X5,Y55880 PRINT A$;5890 RCLOSE 5900 CURSOR 15910 REMARK SINGLE CHARACTER INPUT ROUTINE5920 POINTER X4,Y4,Z$5930 REMARK LENGTH OF ZERO MEANS END OF INPUT5940 IF LEN(Z$)=0 THEN 60305950 REMARK RUBOUT MEANS TO DELETE LAST CHARACTER5960 IF ASC(Z$)=127 THEN 60005970 REMARK INSERT CHARACTER INTO STRING5980 A$=REP(Z$,LEN(A$),0)5990 GO TO 58606000 REMARK "RUBOUT" LAST CHARACTER6010 A$=REP("",LEN(A$)-1,1)6020 GO TO 58606030 REMARK DELETE UNDERLINE CHARACTER6040 A$=SEG(A$,1,LEN(A$)-1)6050 REMARK BUILD STRING IMAGE IN REFRESH6060 ROPEN 16070 PRINT @32,21:X5,Y56080 PRINT A$;6090 RCLOSE 6100 CURSOR 16110 GO TO 54506120 REMARK FIX THE CURRENT OBJECT6130 FIX 16140 REMARK CYCLE SYNCRONIZATION ROUTINE6150 K1=NOT(K1)6160 IF NOT(K1) AND I>5 THEN 61906170 GO TO 54506180 I=N+1-INT(N*Y5/100+1)6190 REMARK RE-BUILD THE SYMBOL ROUTINE6200 K1=06210 MOVE 65,506220 ROTATE A6230 ROPEN 16240 VISIBILITY 1,06250 GOSUB (I=7)+1 OF 6330,56506260 RCLOSE 6270 VISIBILITY 1,16280 CURSOR 16290 GO TO 54506300 REMARK STOP-PROCESSING AND CLEAR REFRESH IMAGES6310 RINIT 6320 GO TO 906330 REM SYMBOL DRAW ROUTINE6340 GO TO I OF 6350,6420,6490,6570,6640,6790,68906350 REM box6360 RMOVE @T:-W1,H16370 RDRAW @T:W,06380 RDRAW @T:0,-H6390 RDRAW @T:-W,06400 RDRAW @T:0,H6410 RETURN 6420 REM diamond6430 RMOVE @T:0,H16440 RDRAW @T:W1,-H16450 RDRAW @T:-W1,-H16460 RDRAW @T:-W1,H16470 RDRAW @T:+W1,H16480 RETURN 6490 REM circle6500 RMOVE @T:0,-H16510 FOR V0=0 TO 360 STEP 106520 ROTATE V0+A6530 RDRAW @T:0.8,06540 NEXT V06550 ROTATE A6560 RETURN 6570 REM parallelogram6580 RMOVE @T:-W1/3*2,H16590 RDRAW @T:W,06600 RDRAW @T:-W1/3,-H6610 RDRAW @T:-W,06620 RDRAW @T:W1/3,H6630 RETURN 6640 REM TERMINAL6650 RMOVE @T:-W1/3*2,H1/3*26660 RDRAW @T:W1/3*4,06670 FOR V0=90 TO -90 STEP -22.56680 ROTATE V0+A6690 RDRAW @T:0,-H1/66700 NEXT V06710 ROTATE A6720 RDRAW @T:-W1/3*4,06730 FOR V0=90 TO -90 STEP -22.56740 ROTATE V0+A6750 RDRAW @T:0,H1/66760 NEXT V06770 ROTATE A6780 RETURN 6790 REM ARROWS6800 IF K THEN 68206810 RMOVE @T:-2,06820 RDRAW @T:2,06830 RDRAW @T:0,16840 RDRAW @T:2,-16850 RDRAW @T:-2,-16860 RDRAW @T:0,16870 RMOVE -2,06880 RETURN 6890 REM DRAW6900 PRINT "DRAW";6910 RETURN 6920 LIST 6930,650006930 FOR I=2 TO 126940 C=0.36950 C1=06960 DELETE 5030,639906970 A$=STR(I)6980 A$=REP("@RD/DEMO",1,1)6990 APPEND A$;50207000 FIND I7010 MARK 1,SPACE*C7020 FIND I7030 ON EOF (0) THEN 70607040 CALL "bsave"7050 IF C1=0 THEN 70907060 C1=07070 C=C+0.17080 GO TO 70007090 PRINT "file number ";I;" has been COPIED at";C*100;"% OF SPACE"7100 NEXT I7110 END 7120 RETURN 64554 CALL "BSAVE"64560 OLD "DISCTOTAPE.CONT"