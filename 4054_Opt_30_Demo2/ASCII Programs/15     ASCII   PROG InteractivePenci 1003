5000 REM FILE 15 INTERACTIVE PENCIL5010 SET DEGREES 5020 PAGE 5030 CHARSIZE 45040 PRINT "`M'=MOVE    `D'=DRAW     `S'=STOP"5050 PRINT @32,21:30,55060 PRINT "I N T E R A C T I V E   P E N C I L"5070 X1=655080 Y1=505090 ROTATE -205100 S=0.85110 MOVE 65,505120 ROPEN 995130 VISIBILITY 99,05140 RDRAW -2*S,6*S5150 RDRAW 0,14*S5160 RDRAW 4*S,05170 RDRAW 0,-4*S5180 RDRAW -4*S,05190 RMOVE 0.5*S,4*S5200 RDRAW 0,2*S5210 RDRAW 3*S,05220 RDRAW 0,-2*S5230 RMOVE -2.5*S,-4*S5240 RDRAW 0,-11*S5250 RMOVE -S,S5260 RDRAW S,-S5270 RDRAW S,S5280 RDRAW S,-S5290 RDRAW S,S5300 RMOVE -S,-S5310 RDRAW 0,11*S5320 RMOVE S,05330 RDRAW 0,-10*S5340 RDRAW -2*S,-6*S5350 DRAW X1,Y15360 RCLOSE 5370 VISIBILITY 99,15380 CURSOR 995390 POINTER X,Y,Z$5400 IF Z$="D" THEN 54605410 IF Z$="s" THEN 54905420 MOVE X,Y5430 X1=X5440 Y1=Y5450 GO TO 51105460 MOVE X1,Y15470 DRAW X,Y5480 GO TO 54305490 RINIT 5500 U7=9995510 U8=9995520 GO TO 9064554 CALL "BSAVE"64560 OLD "DISCTOTAPE.CONT"