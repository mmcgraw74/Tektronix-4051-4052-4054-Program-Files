5000 REM FILE 6 PERT PROGRAM5010 RINIT 5020 SET KEY 5030 PAGE 5040 SET DEGREES 5050 DELETE M,P5060 CHARSIZE 15070 DIM M(17,4)5080 DATA 1,2,15,05090 DATA 1,3,5,05100 DATA 1,4,10,05110 DATA 1,5,3,05120 DATA 2,6,25,155130 DATA 3,7,60,55140 DATA 4,9,0,105150 DATA 5,9,0,35160 DATA 6,8,30,405170 DATA 7,8,30,655180 DATA 8,9,0,955190 DATA 9,10,40,955200 DATA 10,11,3,1355210 DATA 10,12,8,1355220 DATA 11,12,0,1385230 DATA 12,13,35,1435240 DATA 13,14,5,1785250 READ M5260 DATA 4.99,74.88,16.26,88.32,18.18,78.98,18.05,68.995270 DATA 19.71,59.14,30.98,88.45,31.74,79.1,46.08,805280 DATA 60.67,70.53,75.01,70.53,87.04,75.65,99.84,70.45290 DATA 113.02,70.4,126.21,70.45300 DIM P(14,2)5310 READ P5320 FOR N=1 TO 145330 MOVE P(N,1),P(N,2)5340 GOSUB 58505350 NEXT N5360 FOR I=1 TO 175370 X0=P(M(I,1),1)+W/25380 Y0=P(M(I,1),2)5390 X9=P(M(I,2),1)-W/25400 Y9=P(M(I,2),2)5410 X=X9-X05420 Y=Y9-Y05430 GOSUB 59805440 ROTATE A5450 MOVE X0,Y05460 R1=1.55470 R=SQR((X9-X0)^2+(Y9-Y0)^2)/2-R15480 RDRAW R,05490 RMOVE R1,05500 GIN X,Y5510 MOVE X+R1,Y5520 FOR J=0 TO 360 STEP 205530 DRAW X+COS(J)*R1,Y+SIN(J)*R15540 NEXT J5550 MOVE X,Y5560 RMOVE R1,05570 DRAW X9,Y95580 RDRAW -2,0.25590 RDRAW 0,-0.45600 RDRAW 2,0.25610 MOVE X,Y5620 I$=STR(M(I,3))5630 I$=REP("",1,1)5640 PRINT @32,21:X-LEN(I$)/2*1,Y-15650 PRINT I$;5660 NEXT I5670 CHARSIZE 25680 PRINT @32,21:0,505690 PRINT USING "10X100""-""":5700 PRINT USING "68T""DAYS PASSED WHEN ACTIVITY""":5710 PRINT USING "60T50""-""":5720 A$="STARTS(3)"5730 B$="FINISHES(4)"5740 PRINT USING "10X4(25A)":"ACTIVITY(1)","DURATION(2)",A$,B$5750 PRINT USING "10X100""-""":5760 PRINT 5770 FOR I=1 TO 175780 V=M(I,4)+M(I,3)5790 PRINT USING "14D""-""FD25T3(16D9X)":M(I,1),M(I,2),M(I,3),M(I,4),V5800 NEXT I5810 U7=1005820 U8=905830 DELETE M,P5840 GO TO 905850 REM5860 W=45870 RMOVE -0.5*W,0.5*W5880 RDRAW W,05890 RDRAW 0,-W5900 RDRAW -W,05910 RDRAW 0,W5920 RMOVE 0.5*W,-0.5*W5930 I$=STR(N)5940 I$=REP("",1,1)5950 RMOVE -LEN(I$)/2*1.9,-0.75960 PRINT N;5970 RETURN 5980 REM --------------------------------------------------5990 REM   DIRECTION SUBROUTINE6000 REM   INPUT  X=DELTA X6010 REM          Y=DELTA Y6020 REM   OUTPUT A=ANGLE6030 REM   INTERNAL A0,A1,A26040 REM --------------------------------------------------6050 A0=SQR(X^2+Y^2)6060 A=ASN(Y/A0)6070 A0=SGN(Y)=-16080 A1=SGN(X)=-16090 A2=NOT(A1)6100 A1=A2*(A0=1)+A1*(A0<>1)6110 A=(A0<>A1)*(180-A)+(A0 AND A1)*(360+A)+NOT(A0 OR A1)*A6120 RETURN 64554 CALL "BSAVE"64560 OLD "DISCTOTAPE.CONT"