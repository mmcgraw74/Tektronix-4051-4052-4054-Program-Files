56 GO TO 610
60 GO TO 400
76 GO TO 1040
80 GO TO 890
100 GOSUB 270
110 PRINT "ENTER THE X- AND Y-COORDINATE VALUES. ";
120 INPUT P1,P2
130 GOSUB 170
140 PRINT USING 1300:"X",P1,"","R",Q1
150 PRINT USING 1310:"Y",P2,"THETA",Q2,Q$
160 GO TO 110
170 Q1=SQR(P1*P1+P2*P2)
180 Q2=0
190 IF P2=0 THEN 240
200 Q2=ACS(P1/Q1)
210 IF P2>0 THEN 230
220 Q2=8*ATN(1)-Q2
230 RETURN 
240 IF P1=>0 THEN 260
250 Q2=4*ATN(1)
260 RETURN 
270 SET KEY 
280 DIM P$(1),Q$(8)
290 PRINT "ARE YOU WORKING IN DEGREES? (A NO ASSUMES RADIANS.) ";
300 INPUT P$
310 IF P$="Y" THEN 340
320 IF P$="N" THEN 370
330 GO TO 290
340 SET DEGREES 
350 Q$=" DEGREES"
360 RETURN 
370 SET RADIANS 
380 Q$=" RADIANS"
390 RETURN 
400 GOSUB 270
410 PRINT "ENTER THE R AND THETA VALUES. ";
420 INPUT Q1,Q2
430 IF Q1<0 THEN 480
440 GOSUB 500
450 PRINT USING 1300:"R",Q1,"","X",P1
460 PRINT USING 1300:"THETA",Q2,Q$,"Y",P2
470 GO TO 410
480 PRINT "R MUST BE GREATER THAN OR EQUAL TO ZERO."
490 GO TO 410
500 P1=Q1*COS(Q2)
510 P2=Q1*SIN(Q2)
520 RETURN 
530 GOSUB 270
540 PRINT "ENTER THE X-, Y-, AND Z-COORDINATE VALUES. ";
550 INPUT P1,P2,P3
560 GOSUB 170
570 PRINT USING 1300:"X",P1,"","R",Q1
580 PRINT USING 1310:"Y",P2,"PHI",Q2,Q$
590 PRINT USING 1300:"Z",P3,"","Z",P3
600 GO TO 540
610 GOSUB 270
620 PRINT "ENTER THE R,PHI, AND Z VALUES. ";
630 INPUT Q1,Q2,P3
640 IF Q1<0 THEN 700
650 GOSUB 500
660 PRINT USING 1300:"R",Q1,"","X",P1
670 PRINT USING 1300:"PHI",Q2,Q$,"Y",P2
680 PRINT USING 1300:"Z",P3,"","Z",P3
690 GO TO 620
700 PRINT "R MUST BE GREATER THAN OR EQUAL TO ZERO."
710 GO TO 620
720 GOSUB 270
730 PRINT "ENTER THE X-,Y-, AND Z-COORDINATE VALUES. ";
740 INPUT P1,P2,P3
750 GOSUB 800
760 PRINT USING 1300:"X",P1,"","RHO",Q1
770 PRINT USING 1310:"Y",P2,"PHI",Q2,Q$
780 PRINT USING 1310:"Z",P3,"THETA",Q3,Q$
790 GO TO 730
800 GOSUB 170
810 Q1=SQR(P1*P1+P2*P2+P3*P3)
820 Q3=0
830 IF P1=0 AND P2=0 THEN 860
840 Q3=ACS(P3/Q1)
850 RETURN 
860 IF P3=>0 THEN 880
870 Q3=4*ATN(1)
880 RETURN 
890 GOSUB 270
900 PRINT "ENTER THE RHO, PHI, AND THETA VALUES. ";
910 INPUT Q1,Q2,Q3
920 IF Q1<0 THEN 980
930 GOSUB 1000
940 PRINT USING 1300:"RHO",Q1,"","X",P1
950 PRINT USING 1300:"PHI",Q2,Q$,"Y",P2
960 PRINT USING 1300:"THETA",Q3,Q$,"Z",P3
970 GO TO 900
980 PRINT "RHO MUST BE GREATER THAN OR EQUAL TO ZERO."
990 GO TO 900
1000 P1=Q1*SIN(Q3)*COS(Q2)
1010 P2=Q1*SIN(Q3)*SIN(Q2)
1020 P3=Q1*COS(Q3)
1030 RETURN 
1040 PAGE 
1050 P=2
1060 GOSUB 1240
1070 INPUT P1
1080 Q1=P1*0.0174532925199
1090 GOSUB 1270
1100 IF P1<0 THEN 1120
1110 IF P1<360 THEN 1150
1120 P1=P1-INT(P1/360)*360
1130 Q1=P1*0.0174532925199
1140 GOSUB 1270
1150 GO TO P OF 1190,1060
1160 GO TO 1100
1170 PAGE 
1180 P=1
1190 GOSUB 1240
