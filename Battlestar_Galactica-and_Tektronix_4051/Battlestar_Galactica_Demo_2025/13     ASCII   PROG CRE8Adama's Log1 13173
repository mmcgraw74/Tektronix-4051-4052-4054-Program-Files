100 REM *LEROY CHARACTER GENERATOR * modified MAR 2025 MCM110 INIT 120 REM BSG - MAN WITH NINE LIVES - Adama's log1130 REM 140 REM "Leroy Character Generator Program and Examples"150 REM "   Monty McGraw - October 14, 2018"160 REM "Initializing data(4 minutes on 4051, 30 sec on 4052/54):..";170 RESTORE 3450180 DIM L$(4000),P$(1000),D(2),E(2),Z$(3),R(10),R$(15)190 GOSUB 910200 PAGE 210 REM Adama's log: ~ = pause, ^ = new page, | = log end220 DATA "IT HAS BEEN TWELVE SECTONS SINCE"230 DATA "BALTAR'S SURRENDER AND OUR"240 DATA "ENCOUNTER WITH THE ADVANCED RACE,"250 DATA "THE MYSTERIOUS ONES, WHO GAVE US"260 DATA "COORDINATES WHICH PRESUMABLY"270 DATA "GUIDE US TO THE PLANET EARTH."280 DATA "NO REFERENCE OF TIME SEEMS APPARENT"290 DATA "IN THE CURIOUS DIRECTIONS, SO IT IS"300 DATA "IMPOSSIBLE TO KNOW WHETHER WE CAN"310 DATA "EXPECT TO FIND EARTH TOMORROW OR MANY"320 DATA "YAHRENS FROM NOW. BUT "340 DATA "~"350 DATA "OUR SCOUTS "360 DATA "^"370 DATA "HAVE LOCATED INCREASED SIGNS OF THE"380 DATA "TRAIL TAKEN BY OUR ANCESTORS, THE"390 DATA "THIRTEENTH TRIBE, AND IN MY HEART I"400 DATA "FEEL WE ARE GETTING CLOSE."420 DATA "CELEBRATIONS ARE EVERYWHERE.  OUR"430 DATA "PEOPLE'S EXPECTATIONS GROW WITH"440 DATA "EVERY PASSING CENTAR, AND WE'VE GIVEN"450 DATA "OUR WEARY COMBAT PILOTS TIME FOR"460 DATA "LEISURE AND REJUVENATION, FOOD,"470 DATA "WATER, AND HOPE. "480 DATA "|"490 REM CREATE the R12 file for ADAMA's LOG ROUTINE500 RESTORE 220510 P$=""520 FIND @5:14530 REM MOVE TO THE BEGINNING LOCATION and set font size540 S=3.6550 A=0560 D(1)=10570 D(2)=100580 MOVE D(1),D(2)590 READ C$600 IF C$<>"|" AND C$<>"^" AND C$<>"~" THEN 730610 WRITE @5:C$612 R(1)=-D(1)614 R(2)=-D(2)616 R(3)=D(1)618 R(4)=D(2)+5620 R(5)=D(1)+4622 R(6)=D(2)+5624 R(7)=D(1)+4626 R(8)=D(2)628 R(9)=D(1)630 R(10)=D(2)632 CALL "CHANGE",R,R$634 CALL "RDRAW",R$,1,0,0636 WRITE @5:R$638 IF C$<>"~" THEN 670640 COPY 650 READ C$660 GO TO 760670 IF C$<>"|" THEN 700680 HOME 690 END 700 COPY 710 PAGE 720 GO TO 560730 D(1)=10740 D(2)=D(2)-8750 MOVE D(1),D(2)760 GOSUB 820770 GOSUB 1330780 CALL "AGIN",D(1),D(2)790 WRITE @5:P$800 P$=""810 GO TO 590820 CALL "AGIN",D(1),D(2)830 D=-D840 CALL "CHANGE",D,Z$850 P$=P$&Z$860 RETURN 870 CALL "AGIN",D(1),D(2)880 CALL "CHANGE",D,Z$890 P$=P$&Z$900 RETURN 910 REM THIS ROUTINE INITIALIZES THE TABLES USE BY THE920 REM CHARACTER GENERATOR. IT SHOULD BE EXECUTED (ONCE) BEFORE930 REM THE CHARACTER GENERATOR IS USED. (i.e. GOSUB 9000)940 DIM N$(257),D$(513),M$(2279),E$(1),F$(1),G$(1),J$(2279),K$(2279)950 REM SET GRAPHIC DEVICE (DEFAULT IS SCREEN)960 U9=32970 REM PRINT "FILE # OF DATA? ";980 REM INPUT Z990 REM PAGE 1000 REM FIND Z1010 REM INITIALIZE FROM DATA STATEMENTS BELOW INSTEAD OF A FILE1020 REM READ @33:N$,D$,M$1030 J$=""1040 READ H$1050 C$=SEG(H$,1,1)1060 IF C$="z" THEN 10901070 J$=J$&H$1080 GO TO 10401090 GOSUB 33201100 N$=K$1110 J$=""1120 PRINT "........";1130 READ H$1140 C$=SEG(H$,1,1)1150 IF C$="z" THEN 11801160 J$=J$&H$1170 GO TO 11301180 GOSUB 33201190 D$=K$1200 J$=""1210 PRINT "........";1220 READ H$1230 C$=SEG(H$,1,1)1240 IF C$="z" THEN 12701250 J$=J$&H$1260 GO TO 12201270 GOSUB 33201280 M$=K$1290 REM SET CODE FOR NO ITALICS1300 I9=01310 PRINT "........"1320 RETURN 1330 REM ***CHARACTER GENERATOR ROUTINE*** 51/00-8012/01340 REM VARIABLES USED -1350 REM   S - SCALE OF THE CHARACTERS IN GRAPHIC DISPLAY UNITS (GDUs)1360 REM   C$ - ASCII CHARACTER STRING TO BE PLOTTED1370 REM   A     - ANGLE (IN DEGREES) OF COUNTERCLOCKWISE ROTATION1380 REM Z - DATA FILE #1390 REM LOCAL VARIABLES USED -1400 REM   X4,Y4    - TAB REFERENCE 1410 REM   X5,Y5    - GENERAL REFERENCE POINT ALSO UNDERLINE REFERENCE1420 REM   X6,Y6    - CURRENT LOCATION1430 REM   X7,Y7    - CHARACTER MOVES1440 REM   X8,Y8    - STARTING CHARACTER STRING LOCATION USED FOR CR1450 REM   X9,Y9    - WORK VARIABLES1460 REM   S9,C9  - SIN(A) AND COS(A)1470 REM   E$,F$,G$ - WORK STRINGS1480 REM   N$   - TABLE OF MOVES PER CHARACTER1490 REM   D$   - TABLE OF INDEX INTO M$ AND WIDTH1500 REM   M$   - CHARACTER MOVES1510 REM   I9   - ITALICS CODE (1=ON  0=OFF)1520 REM   L9,M9 - INDEX VARIABLES1530 REM   P9   - DRAW CODE (1=MOVE 2=DRAW)1540 REM   S8   - CORRECTED SCALE FACTOR1550 REM   U9   - UNIT NUMBER OF GRAPHIC DEVICE (DEFAULT IS 32)1560 REM   C8   - ASCII DECIMAL EQUIVALENT OF LETTER OF C$1570 REM   W8   - CHARACTER WIDTH (IN GDUs) USED FOR BACKSPACE1580 REM   N9,D9 - MISC. VARIABLES1590 REM GET BEGINNING LOCATION1600 INPUT @U9,24:X6,Y61610 REM SAVE STARTING LOCATION1620 X8=X61630 Y8=Y61640 REM SET REFERENCE POINT1650 X5=X61660 Y5=Y61670 REM ENTRY POINT FOR BYPASSING THE GIN COMMAND1680 REM THE CHARACTERS WILL BE DRAWN AT THE END OF THE LAST STRING1690 REM CORRECT SCALE FACTOR FOR GDUs1700 S8=S*1.251710 SET DEGREES 1720 REM ALL ANGLES IN DEGREES1730 S9=SIN(A)1740 C9=COS(A)1750 FOR L9=1 TO LEN(C$)1760 REM GET A CHARACTER1770 E$=SEG(C$,L9,1)1780 C8=ASC(E$)1790 REM CHECK FOR CONTROL CHARACTER1800 IF C8<>124 THEN 25001810 L9=L9+11820 E$=SEG(C$,L9,1)1830 C8=ASC(E$)1840 REM CHECK FOR ANOTHER CONTROL CHARACTER, IF YES DRAW ONE1850 IF C8=124 THEN 25001860 REM CHECK FOR 5 THROUGH 91870 IF C8<53 OR C8>57 THEN 19001880 GO TO C8-52 OF 1930,1980,2030,2080,21301890 REM CHECK FOR A THROUGH G1900 IF C8<65 OR C8>72 THEN 32901910 GO TO C8-64 OF 2170,2210,2250,2290,2330,2370,2450,24801920 REM ENTER SUPERSCRIPT MODE (CODE 5)1930 Y6=Y6+S8*0.3333*C91940 X6=X6-S8*0.3333*S91950 S8=S8*0.61960 GO TO 32801970 REM LEAVE SUPERSCRIPT MODE (CODE 6)1980 S8=S8*1.66671990 Y6=Y6-S8*0.3333*C92000 X6=X6+S8*0.3333*S92010 GO TO 32802020 REM ENTER SUBSCRIPT MODE (CODE 7)2030 Y6=Y6-S8*0.2667*C92040 X6=X6+S8*0.2667*S92050 S8=S8*0.62060 GO TO 32802070 REM LEAVE SUBSCRIPT MODE (CODE 8)2080 S8=S8*1.66672090 Y6=Y6+S8*0.2667*C92100 X6=X6-S8*0.2667*S92110 GO TO 32802120 REM ESTABLISH REFERENCE POINT (CODE 9)2130 X5=X62140 Y5=Y62150 GO TO 32902160 REM RETURN TO REFERENCE POINT (CODE A)2170 X6=X52180 Y6=Y52190 GO TO 32802200 REM ESTABLISH TAB REFERENCE (CODE B)2210 X4=X6-X82220 Y4=Y6-Y82230 GO TO 32902240 REM TAB OPERATOR (CODE C)2250 X6=X4+X82260 Y6=Y4+Y82270 GO TO 32802280 REM UNDERLINE (CODE D)2290 PRINT @U9,21:X6+0.2667*S8*S9,Y6-0.2667*S8*C92300 PRINT @U9,20:X5+0.2667*S8*S9,Y5-0.2667*S8*C92310 GO TO 32802320 REM BACKSPACE (CODE E)2330 X6=X6-X9*C92340 Y6=Y6-X9*S92350 GO TO 32802360 REM CARRIAGE RETURN (CODE F)2370 X9=X8+1.5*S8*S92380 Y9=Y8-1.5*S8*C92390 X6=X92400 Y6=Y92410 X8=X92420 Y8=Y92430 GO TO 32802440 REM ITALICS MODE (CODE G)2450 I9=12460 GO TO 32902470 REM NO ITALICS (CODE H)2480 I9=02490 GO TO 32902500 P9=22510 N9=C8*2+12520 E$=SEG(N$,N9,1)2530 F$=SEG(N$,N9+1,1)2540 N9=ASC(E$)*16+ASC(F$)2550 D9=C8*4+12560 E$=SEG(D$,D9,1)2570 F$=SEG(D$,D9+1,1)2580 G$=SEG(D$,D9+2,1)2590 W8=D92600 D9=ASC(E$)*256+ASC(F$)*16+ASC(G$)2610 D9=D9*2+12620 E$=SEG(D$,W8+3,1)2630 W8=ASC(E$)2640 FOR M9=D9 TO D9+2*N9-1 STEP 22650 X$=SEG(M$,M9,1)2660 X7=ASC(X$)2670 Y$=SEG(M$,M9+1,1)2680 Y7=ASC(Y$)2690 REM CHECK FOR SPECIAL CODE2700 IF X7=15 THEN 30602710 REM OFFSET FOR NONCENTERED SYMBOLS2720 X7=X7-12730 Y7=Y7-32740 REM CHECK FOR CENTERED SYMBOLS2750 IF C8>16 THEN 28002760 REM OFFSET FOR CENTERED SYMBOLS2770 Y7=Y7-62780 X7=X7-62790 REM ITALICIZE IT2800 IF I9=0 THEN 28302810 X7=X7+0.3*Y72820 REM ROTATE IT2830 IF A=0 THEN 28902840 X9=-Y7*S9+X7*C92850 Y9=Y7*C9+X7*S92860 X7=X92870 Y7=Y92880 REM SCALE IT2890 X9=X7*0.06667*S8+X62900 Y9=Y7*0.06667*S8+Y62910 X7=X92920 Y7=Y92930 REM CHECK FOR A MOVE2940 IF P9=2 THEN 30002950 REM DRAW IT2960 PRINT @U9,20:X7,Y72970 GOSUB 8702980 GO TO 30302990 REM MOVE TO IT3000 PRINT @U9,21:X7,Y73010 GOSUB 8203020 REM RESET DRAW CODE3030 P9=13040 GO TO 31903050 REM SPEC CODE X7=153060 GO TO Y7+1 OF 3100,3180,31403070 GO TO 31903080 REM MOVE CODE3090 REM Y7=03100 P9=23110 GO TO 31903120 REM Y7=23130 REM INCREASE SCALE FACTOR3140 S8=S8*23150 GO TO 31903160 REM Y7=13170 REM DECREASE SCALE FACTOR3180 S8=S8*0.53190 NEXT M93200 REM CHECK FOR CENTERED SYMBOL (RETURN TO CENTER OF SYMBOL)3210 IF C8<17 THEN 32803220 REM CALCULATE WIDTH OF CHARACTER3230 X9=W8*0.06667*S83240 REM CALCULATE NEXT LOCATION 3250 Y6=Y6+X9*S93260 X6=X6+X9*C93270 REM MOVE TO IT3280 PRINT @U9,21:X6,Y63290 NEXT L93300 RETURN 3310 REM SUBROUTINE TO CONVERT J$ HEX STRING to BINARY K$3320 K$=""3330 C$=CHR(13)3340 FOR I=1 TO LEN(J$)3350 Q$=SEG(J$,I,1)3360 Q1=ASC(Q$)-483370 IF Q1<10 THEN 33903380 Q1=Q1-73390 Q$=CHR(Q1)3400 K$=K$&Q$3410 NEXT I3420 K$=K$&C$3430 RETURN 3440 REM N$3450 DATA "0B130A0B05050A050C0D050C0D020B"3460 DATA "06090606050609061108080606080C"3470 DATA "0E05010B090B0F171504060608050A"3480 DATA "0208020D050E10040E110515111113"3490 DATA "030503101C060E0C0907060E060708"3500 DATA "060305040D09120B0F050903050506"3510 DATA "040402040304040D0E0A0E0C080F08"3520 DATA "050706020E080B0E0D060C05080305"3530 DATA "0507040B040B0604"3540 DATA "z"3550 REM D$3560 DATA "000E00BE01EE028E033E038E03DE04"3570 DATA "7E04CE058E065E06AE076E083E085E"3580 DATA "090E096709FE0A5A0ABA0B0E0B6D0B"3590 DATA "FA0C5F0D6A0DEA0E6E0ECE0F2A0FAA"3600 DATA "106A114A119A11A5125812EA139A14"3610 DATA "8A15FA1745178717E7184A18CA1915"3620 DATA "19BA19D51A581A7A1B4A1B9A1C7A1D"3630 DATA "7A1DBA1E9A1FAA1FFA214A22552365"3640 DATA "249A24CA251A254A264F280A286A29"3650 DATA "4A2A0A2A9A2B0A2B6A2C4A2CA42D1A"3660 DATA "2D9A2DFA2E2C2E7A2EBA2F8A301A31"3670 DATA "3A31EA32DA332A33BA33EE343A348A"3680 DATA "34EA35263568358635CA35FA363536"3690 DATA "783748382838C839A83A683AE83BD8"3700 DATA "3C543CA43D183D743D9E3E783EF83F"3710 DATA "A84088415741B8427642C84348437E"3720 DATA "43C84418448844C6457845B6466A46"3730 DATA "FA"3740 DATA "z"3750 REM M$3760 DATA "242ECEC424F06989F07A786989F07A"3770 DATA "78F0192C4E7FAECCD9C6A473442619"3780 DATA "267FC626F06989F07A786989F07A78"3790 DATA "F0197FD9731924CEF02EC419D9F07F"3800 DATA "73732CCC73F06989F07A78C42ECE24"3810 DATA "C41949767376A9D9A97C7F7C49464F"3820 DATA "7EACC9D646F06989F07A7824CEC42E"3830 DATA "24245797C4979BCE9B5B2E5B57AC1C"3840 DATA "294674A3ACF06989F07A787F7315D5"3850 DATA "AE4E15F06989F07A78347FB41BDB34"3860 DATA "2D2E3F4F5E5D4C3C2D7F73F0577397"3870 DATA "1595F0971A9D9A1AF0179719D9F09B"3880 DATA "D997F2635202270A5A69F11D9A17F0"3890 DATA "159508091B3C5B96B5D6E8E9DBBC9B"3900 DATA "56351608129DF01999F01696565EF0"3910 DATA "1A9AF014945B1957F019D9737FF05B"3920 DATA "7F9B213041546B7E8F9E13263CF01B"3930 DATA "2C9C7C666473841999F05B6C5D4C5B"3940 DATA "F055665746551939537F9FF0233334"3950 DATA "2423F026363F2F263F3C2F3FF06F6C"3960 DATA "5F6F135FF09F53F09B2BF01787525F"3970 DATA "F08C6D4D2C2A397887856444254F2F"3980 DATA "1E1C2B4B5C5E4F6E7E9F13F0638394"3990 DATA "9687675654639383743D3E4F5F6E6D"4000 DATA "5C2A181624436374868979993F3C2F"4010 DATA "3F6F4D3A3643611F3D4A4633111999"4020 DATA "F0753DF07D351999F05D5523333424"4030 DATA "233424333220199923333424233424"4040 DATA "33137F634325181A2D4F6F8D9A9885"4050 DATA "632C5F5323831B1C2E4F6F8E9C8A79"4060 DATA "38271513932E4F6F8E8C6A4A6A8997"4070 DATA "968463432416737F16961524436384"4080 DATA "96988A6B4B2A191F9F182A4B6B8A98"4090 DATA "9684634324161A2D4F6F8E1F9F5946"4100 DATA "432E4F6F8E8C6A4A6A899796846343"4110 DATA "241617294A2C2E24436385989C8E6F"4120 DATA "4F2E1C1A284767889A29393A2A293A"4130 DATA "2A39F0233334242334243329393A2A"4140 DATA "293A2A39F023333424233424333220"4150 DATA "9E19949A1AF017971E99142A1C2E4F"4160 DATA "6F8E9C8A695756F054436354A59484"4170 DATA "6557596B8C9CABA5B4C4E6E9DCBE8F"4180 DATA "7F4E2C191724427181B2135F93F037"4190 DATA "77131F5F7E8C7A5919698896846313"4200 DATA "9C8E6F4F2D1A182543638496131F5F"4210 DATA "8D9A988553139F1F1A6A1A13939F1F"4220 DATA "1A6A1A139C8E6F4F2D1A1825436384"4230 DATA "969868131F1A9A9F93232F1F3FF013"4240 DATA "339F968463432416181F13179F5B93"4250 DATA "1F1393131F63BFB3131F939F634325"4260 DATA "181A2D4F6F8D9A988563131F5F8E9C"4270 DATA "9B895818634325181A2D4F6F8D9A98"4280 DATA "8563F046657392131F5F8E9C9B8958"4290 DATA "1858939C8E6F4F2E1C2A6988968463"4300 DATA "4324161F9FF05F539F968463432416"4310 DATA "181F1F539F1F437FA3DF139FF01F93"4320 DATA "1F5A9FF05A531F9F13935F2F23531F"4330 DATA "731F4F4313145E94F20151F13F3C2F"4340 DATA "3F7664432416192B4C6B7976737C1F"4350 DATA "13F0797664432416192B4C6B797664"4360 DATA "432416192B4C6B797664432416192B"4370 DATA "4C6B7976737C7F7664432416192B4C"4380 DATA "6B7978181858F07D6F4F3D337C7664"4390 DATA "432416192B4C6B79736140211F1319"4400 DATA "2B4C6B79732F2EF02C232F2EF02C23"4410 DATA "21101F13167C38732F231C13192B4C"4420 DATA "6B7973798BACCBD9D31C13192B4C6B"4430 DATA "79737664432416192B4C6B79761C10"4440 DATA "F0796B4C2B19162443647679796B4C"4450 DATA "2B191624436476797C701C13192B4C"4460 DATA "6B14335374766728191B3C5C7B3E33"4470 DATA "F01A5A1C16244364767C731C437C1C"4480 DATA "437CA3DC137CF01C731C44F07C4421"4490 DATA "101C7C13735F4F3E3C2A1928363443"4500 DATA "53F22B21F11F2F3E3C4A5948363423"4510 DATA "139A88684A2A18F0169653AD0D53"4520 DATA "z"