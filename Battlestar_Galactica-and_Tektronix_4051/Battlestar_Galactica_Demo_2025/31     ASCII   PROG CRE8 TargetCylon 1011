1 REM updated by mcm MARCH 2025 to CREATE R12 Target CYLON file100 INIT110 PAGE120 FIND @5:30130 FIND @6:32140 DIM P$(3072),D(2),Z$(3),E(3,140),B(3,102),G$(128),H$(512)150 SET DEGREES160 P$=""710 REM copy Targeting Circle @5:30 to @6:32 and create R12 Cylon @5:7720 READ @5:T$,C$730 WRITE @6:"Target Cylon","  "740 READ @5:P$750 WRITE @6:P$760 FIND @5:7770 READ @5:B,G$,H$,E780 REM Create Cylon R12 from OPTION 30 E ARRAY WITH OFFSET790 X0=-10800 Y0=10810 P$=""820 MOVE 65+X0,50+Y0830 GOSUB 950840 FOR I=1 TO 140850 GO TO E(1,I)-19 OF 860,890860 RDRAW E(2,I),E(3,I)870 GOSUB 1010880 GO TO 910890 RMOVE E(2,I),E(3,I)900 GOSUB 950910 NEXT I920 WRITE @6:P$930 WRITE @6:"|EOG|"931 PAGE932 FIND@6:32933 READ@6:T$,C$,P$934 CALL"RDRAW",P$,1,0,0935 READ@6:P$936 CALL"RDRAW",P$,1,0,0949 END950 CALL "AGIN",X,Y960 D(1)=-X970 D(2)=-Y980 CALL "CHANGE",D,Z$990 P$=P$&Z$1000 RETURN 1010 CALL "AGIN",X,Y1020 D(1)=X1030 D(2)=Y1040 CALL "CHANGE",D,Z$1050 P$=P$&Z$1060 RETURN 