100 INIT 110 REM PROGRAM WRITTEN BY DAVID H. ROBINSON ON SEPT. 12, 1980120 PAGE 130 DIM W(10),L(10),P(10),X(10),Z(10),T(10),M(10),E(10),B(10),C(10)140 DIM G(10),S(10)150 PRINT 160 PRINT "THIS PROGRAM ALLOWS THE USER TO SPECIFY THE PHYSICAL"170 PRINT "PARAMETERS NECESSARY FOR IMPLEMENTING THE TREATMENT PLAN"180 PRINT "AND PERFORMS THE TREATMENT TIME CALCULATION FOR EACH BEAM."190 PRINT "DATA IS ENTERED VIA THE KEYBOARD AND THEN PRINTED ON THE"200 PRINT "REVERSE SIDE OF THE TREATMENT PLAN."210 PRINT 220 PRINT "PRESS 'RETURN' TO BEGIN....";230 INPUT A$240 PAGE 245 REM ENTRY OF TREATMENT PLAN DOSE PRESCRIPTION250 PRINT "ENTER THE NUMBER OF FIELDS IN THIS PLAN: ";260 INPUT N270 PRINT 280 PRINT "ENTER THE NORMALIZATION NUMBER (I.E. 140): ";290 INPUT O300 PRINT 310 PRINT "ENTER THE TOTAL TUMOR DOSE AT NORMALIZATION LEVEL (RADS): ";320 INPUT D330 PRINT 340 PRINT 350 PRINT 355 REM ENTRY OF INDIVIDUAL BEAM PARAMTERS360 FOR I=1 TO N370 PRINT "BEAM # ";I;":"380 PRINT 390 PRINT "   FIELD WIDTH (CM): ";400 INPUT W(I)410 PRINT "   FIELD LENGTH (CM): ";420 INPUT L(I)425 REM EQUIVALENT SQUARE CALCULATION430 LET E(I)=2*W(I)*L(I)/(W(I)+L(I))440 PRINT USING 450:E(I)450 IMAGE "   EQUIVALENT SQUARE (CM): ",FD.D460 PRINT 465 REM OUTPUT INCLUDES OUTPUT FACTOR AND IS SPECIFIED AT 0.5 CM466 REM DEPTH IN TISSUE FOR 80 SSD CONDITIONS470 PRINT "   OUTPUT (RADS/MIN AT 80 SSD): ";480 INPUT P(I)490 PRINT 500 PRINT "   WEDGE ANGLE (0=OPEN BEAM): ";510 INPUT G(I)520 PRINT "   WEDGE FACTOR (0=OPEN BEAM): ";530 INPUT Z(I)540 IF Z(I)<>0 THEN 560550 Z(I)=1555 REM WEDGE IS ORIENTED IN RELATION TO THICK SIDE560 PRINT "   WEDGE ORIENTATION (0=OPEN BEAM, 1=ANT, 2=POST, 3=LT,"570 PRINT "          4=RT, 5=SUP, 6=INF): ";580 INPUT C(I)590 PRINT 600 PRINT "   GANTRY ANGLE (START): ";610 INPUT S(I)620 PRINT "   GANTRY ANGLE (STOP): ";630 INPUT B(I)640 PRINT 650 PRINT "   BEAM WEIGHT (I.E. 100): ";660 INPUT X(I)670 PRINT "   TRAY FACTOR (I.E. 0.98): ";680 INPUT T(I)685 REM TREATMENT TIME CALCULATION (MINUTES)690 LET M(I)=D/N*(X(I)/100)/(O/N*0.01*Z(I)*T(I)*P(I))700 PRINT 710 PRINT USING 720:M(I)720 IMAGE "TREATMENT TIME: ",FD.2D," MINUTES"730 PRINT 740 PRINT 750 PRINT "CHANGE DATA FOR BEAM # ";I;" ?(Y/N): ";760 INPUT Y$770 IF Y$="N" THEN 800780 PAGE 790 GO TO 370800 PAGE 810 PRINT 820 PRINT 830 NEXT I835 REM SPECIFICATION OF ISOCENTER LOCATION IN RELATION TO A KNOWN836 REM REFERENCE POINT840 PRINT 850 PRINT "SPECIFICATION OF ISOCENTER LOCATION:"860 PRINT 870 PRINT "  SUPERIOR/INFERIOR: ";880 INPUT Q$890 PRINT 900 PRINT "  RIGHT/LEFT: ";910 INPUT S$920 PRINT 930 PRINT "  ANTERIOR/POSTERIOR: ";940 INPUT T$950 PRINT 960 PRINT 970 PRINT "PRINT DATA ON PLOTTER ?(Y/N): ";980 INPUT N$990 IF N$="N" THEN 1510991 PRINT "What is your plotter address? ";992 INPUT D9995 REM PLOTTER ROUTINE BEGINS1000 PRINT 1010 PRINT 1020 PRINT "*** CHANGE OR REVERSE PAPER AND PRESS 'RETURN' ***";1030 INPUT D$1040 VIEWPORT 0,150,0,1001050 WINDOW 0,150,0,1001060 MOVE @D9:0,431070 PRINT @D9,17:1.2,2.531080 PRINT @D9:"TREATMENT TIME CALCULATION"1090 PRINT @D9:"--------------------------"1100 PRINT @D9,17:1.04,2.251110 PRINT @D9:"TOTAL DAILY TUMOR DOSE: ";D;" RADS";1120 PRINT @D9:"          NORMALIZATION NUMBER: ";O1130 PRINT @D9:1140 PRINT @D9:"                                 WEDGE   WEDGE";1150 PRINT @D9:"    ACTUAL                   WEDGE    TRAY";1160 PRINT @D9:"      OUTPUT      TREATMENT"1170 PRINT @D9:"BEAM #   WIDTH   LENGTH   EQSQ   ANGLE   ORIENT";1180 PRINT @D9:"   GANTRY ANGLES   WEIGHT   FACTOR   FACTOR";1190 PRINT @D9:"   (RADS/MIN)   TIME(MIN)"1200 PRINT @D9:"------   -----   ------   ----   -----   ------ ";1210 PRI @D9:"  -------------   ------   ------   ------   ----------";1220 PRINT @D9:"   ---------"1230 FOR I=1 TO N1240 PRINT @D9: USING 1260:I,W(I),L(I),E(I),G(I),C(I),S(I),B(I)1250 PRINT @D9: USING 1270:X(I),Z(I),T(I),P(I),M(I)1260 IMAGE 3D,6X,2D.D,4X,2D.D,5X,2D.D,4X,2D,7X,D,7X,3D," - ",3D,S1270 IMAGE 6X,4D.D,4X,D.2D,4X,D.2D,6X,3D.D,7X,2D.2D," min."1280 NEXT I1290 MOVE @D9:0,91300 PRINT @D9:"ISOCENTER LOCATION:"1310 PRINT @D9:"-------------------"1320 PRINT @D9:"SUPERIOR/INFERIOR: ";Q$1330 PRINT @D9:"RIGHT/LEFT: ";S$1340 PRINT @D9:"ANTERIOR/POSTERIOR: ";T$1350 MOVE @D9:90,91360 PRINT @D9:"WEDGE ORIENT (THICK):"1370 MOVE @D9:90,71380 PRINT @D9:"------------------------------"1390 MOVE @D9:90,51400 PRINT @D9:"0=OPEN   1=ANT   2=POST"1410 MOVE @D9:90,31420 PRINT @D9:"         3=LT    4=RT"1430 MOVE @D9:90,11440 PRINT @D9:"         5=SUP   6=INF"1450 MOVE @D9:125,451460 PRINT @D9:"    CONTOUR LEVEL(S)"1470 MOVE @D9:125,431480 PRINT @D9:"-------------------------"1490 MOVE @D9:125,01500 PRINT @D9:"-------------------------"1510 END 